@section Scripts{
    <script>
        let app = new Vue({
            el: "#checkoutIndex",
            data: {
                checkoutInThisCheckOut: {
                    checkout: [],
                },
                addcheckoutdetails: {
                    Recipient: "",
                    ShippingAddress: "",
                    ContactPhone: "",
                    Type: "",
                    Memo: ""
                },
                totalprice: 0,
            },
            mounted: function () {
                var self = this;
                fetch('/api/checkout/GetCheckOut/')
                    .then(function (response) { return response.json() })
                    .then(function (result) {
                        console.log(result);
                        self.checkoutInThisCheckOut = result;
                        for (i = 0; i < result.length; i++) {
                            self.totalprice = self.totalprice + result[i].price
                        }

                    })

            },
            methods:
            {
                postCheckOut: function (addcheckoutdetails) {
                    let data = new FormData();
                    data.append("Recipient", this.addcheckoutdetails.Recipient)
                    data.append("ShippingAddress", this.addcheckoutdetails.ShippingAddress)
                    data.append("ContactPhone", this.addcheckoutdetails.ContactPhone)
                    data.append("Memo", this.addcheckoutdetails.Memo)
                    console.log(data)

                    fetch("/api/checkout/PostCheckOut", {
                        method: "POST",
                        body: data

                    })
                        .then(function (response) { return response.json() })
                        .then(function (result) {
                            var al = {
                                icon: 'success',
                                title: 'Established in order',
                                text: result.message,
                                timer: 2000
                            };
                            if (!result.status) {
                                al.icon = "error";
                                al.title = "Uncomplete";
                            }
                            Swal.fire(al)
                        })
                }
            }
        });
    </script>
    }
