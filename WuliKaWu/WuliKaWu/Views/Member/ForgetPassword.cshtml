<div class="container" id="forgetPwdApp" />

<div class="login-register-area pb-100 pt-15">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 offset-lg-2">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> Send Email </h4>
                        </a>
                        <a data-bs-toggle="tab" href="#lg2" v-if="showReset">
                            <h4> Reset </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form v-on:submit.prevent="handleSubmit" id="ForgetPasswordForm" name="ForgetPasswordForm" method="post">
                                        @*<form id="ForgetPasswordForm" name="ForgetPasswordForm" action="/Member/ForgetPassword" method="post">*@
                                        <label for="Account" class="required">帳號</label>
                                        <input type="text" id="Account" name="Account" placeholder="Username">

                                        <label for="Email" class="required">信箱</label>
                                        <input type="email" id="Email" name="Email" placeholder="Email">

                                        <div class="button-box btn-hover">
                                            <button type="submit">Send Email</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane" v-if="showReset">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="Register" method="post">
                                        <label id="Account" name="Account">帳號</label>
                                        <input type="text" name="Account" placeholder="Username" />

                                        <label id="Password" name="Password">密碼</label>
                                        <input type="password" name="Password" placeholder="Password" />

                                        <label id="Name" name="Name">名字</label>
                                        <input type="text" name="Name" />

                                        <label id="Gender" name="Gender"></label>
                                        <select>
                                            <option value="">性別</option>
                                            <option value="0">Femail</option>
                                            <option value="1">Male</option>
                                        </select>

                                        <label id="Birthday" name="Birthday">出生年月日</label>
                                        <input type="date" id="Birthday" name="Birthday" />

                                        <label id="Email" name="Email">電子信箱</label>
                                        <input name="Email" placeholder="E-mail" type="email" />

                                        <label id="Address" name="Address">住址</label>
                                        <input type="text" name="Address" id="Address" />

                                        <label id="PhoneNumber" name="PhoneNumber">住家電話</label>
                                        <input type="text" id="PhoneNumber" name="PhoneNumber" />

                                        <label id="MobilePhone" name="MobilePhone">行動電話</label>
                                        <input type="text" id="MobilePhone" name="MobilePhone" />
                                        <div class="button-box btn-hover">
                                            <button type="submit">Register</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        let forgetPwdVue = new Vue({
            data: {
                showReset: false,
            },
            mounted: function () {
                console.log("")
            },
        });

        document.addEventListener("DOMContentLoaded", () => {
            forgetPwdVue.$mount('#forgetPwdApp')
        })
    </script>
}