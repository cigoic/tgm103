<div class="container" id="loginApp" />

<div class="breadcrumb-area bg-gray-4 breadcrumb-padding-1">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>Login - Register </h2>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><i class="ti-angle-right"></i></li>
                <li>Login - Register </li>
            </ul>
            <h3 class="text-danger">@TempData["error"]</h3>
        </div>
    </div>
    <div class="breadcrumb-img-1">
        <img src="~/assets/images/banner/breadcrumb-1.png" alt="">
    </div>
    <div class="breadcrumb-img-2">
        <img src="~/assets/images/banner/breadcrumb-2.png" alt="">
    </div>
</div>
<div class="login-register-area pb-100 pt-95">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 offset-lg-2">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> login </h4>
                        </a>
                        <a data-bs-toggle="tab" href="#lg2">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form v-on:submit.prevent="handleSubmit" id="loginForm" name="loginForm" method="post">
                                        <label for="Account" class="required"></label>
                                        <input type="text" id="Account" name="Account" v-model="account" placeholder="Username">

                                        <label for="Password" class="required"></label>
                                        <input type="password" id="Password" name="Password" v-model="password" placeholder="Password">

                                        <div class="login-toggle-btn">
                                            <label for="RememberMe">Remember me</label>
                                            <input type="checkbox" id="RememberMe" name="RememberMe" :value="RememberMe">
                                            <a href="/Member/ForgetPassword">Forgot Password?</a>
                                        </div>
                                        <div class="button-box btn-hover">
                                            <button type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="Register" method="post">
                                        <label id="Account" name="Account">帳號</label>
                                        <input type="text" name="Account" placeholder="Username" />

                                        <label id="Password" name="Password">密碼</label>
                                        <input type="password" name="Password" placeholder="Password" />

                                        <label id="Name" name="Name">名字</label>
                                        <input type="text" name="Name" />

                                        <label id="Gender" name="Gender"></label>
                                        <select>
                                            <option value="">性別</option>
                                            <option value="0">Femail</option>
                                            <option value="1">Male</option>
                                        </select>

                                        <label id="Birthday" name="Birthday">出生年月日</label>
                                        <input type="date" id="Birthday" name="Birthday" />

                                        <label id="Email" name="Email">電子信箱</label>
                                        <input name="Email" placeholder="E-mail" type="email" />

                                        <label id="Address" name="Address">住址</label>
                                        <input type="text" name="Address" id="Address" />

                                        <label id="PhoneNumber" name="PhoneNumber">住家電話</label>
                                        <input type="text" id="PhoneNumber" name="PhoneNumber" />

                                        <label id="MobilePhone" name="MobilePhone">行動電話</label>
                                        <input type="text" id="MobilePhone" name="MobilePhone" />
                                        <div class="button-box btn-hover">
                                            <button type="submit">Register</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    <script>
        let loginVue = new Vue({
            data: {
                account: "",
                password: "",
                rememberMe: @User.Claims.FirstOrDefault(u=>u.Type == "RememberMe")?.Value,
            },

            methods: {
                handleSubmit: function () {
                    $post.("/api/Member/Login", {
                        Account: this.account,
                        Password: this.password,
                        RememberMe: this.rememberMe,
                    }).then(function (response) { return response.json() })
                        .then(function (result) {
                            console.log(result);
                            swal(result.message)

                            document.getElementById('loginForm').reset()    // reset form
                        })
                },
            }
        })

        document.addEventListener("DOMContentLoaded", () => {
            loginVue.$mount('#loginApp')
        })
    </script>
}
