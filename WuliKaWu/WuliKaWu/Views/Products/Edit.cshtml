@section Scripts {
<script>

    let PEapp = new Vue({
    
        //el: "EditProduct",
        data:
        {
            product: [],
            productEditUrl: "@Url.Action("Edit")",

        },

        mounted: function(){
            var self = this;
            fetch("/api/product/getbyid/"+"@ViewBag.id")
            //$.get("/api/product/editbyid"+"@ViewBag.id",{

            //})
            .then(function(response){return response.json()})
            .then(function(result){
                console.log(result);
                self.product = result;
                self.product.productId = @ViewBag.id
            })
        },

        methods: 
        {
            ShowImagePreview: function(input) {
                if(input.files && input.files[0]) {
                    var fname = input.files[0].name;
                    var re = /(\.jpg|\.jpeg|\.bmp|\.gif|\.png)$/i;
                    if (!re.exec(fname)) {
                        alert("Image not supported!");
                        $("#fileupload").val("");

                        return false;
                    }
                    else{
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#imagePreview').prop('src', e.target.result);
                        };
                        reader.readAsDataURL(input.files[0]);
                    }
                }         
            },

            mySubmit: function(){
                $.post(this.productEditUrl, {
                    ProductId: this.productId,
                    ProductName: this.productName,
                    Color: this.color,
                    Size: this.size,
                    Category: this.category,
                    PicturePath: this.picturePath,
                    Price: this.price,
                    Discount: this.discount,
                    SellingPrice: this.sellingPrice,
                    Tag: this.tag
                })
                .then(response => 
                    {
                        console.log("ProductId",this.productId)
                        console.log("ProductName",this.prductName)
                        console.log("Color",this.color)
                        console.log("Size",this.size)
                        console.log("Category",this.cstegory)
                        console.log("PicturePath",this.picturePath)
                        console.log("Price",this.price)
                        console.log("Discount", this.discount)
                        console.log("SellingPrice", this.sellingPrice)
                        console.log("Tag", this.tag)

                    })
            }
        }

    });
        //內容都跑完後再載入Vue

        document.addEventListener("DOMContentLoaded", () => {
            PEapp.$mount('#EditProduct')
        })

</script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
