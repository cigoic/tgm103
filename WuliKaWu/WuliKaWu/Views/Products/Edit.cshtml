                                <form>
                                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group" hidden>
                                                <label for="ProductId" class="control-label"></label>
                                                @*<input class="form-control" id="productId" name="ProductName" v-model="productId"/>*@
                                                <input id="productId" name="ProductId" class="form-control" :value="product.productId" />
                                                
                                            </div>

                                            <div class="form-group">
                                                <label for="ProductName" class="control-label">ProductName</label>
                                                @*<input class="form-control" id="productName" name="ProductName" v-model="productName" :placeholder="product.productName"/>*@
                                                <input id="productName" name="ProductName" class="form-control" :value="product.productName" />

                                            </div>

                                            <div class="form-group">
                                                <label for="Color" class="control-label">Color</label>
                                                <input id="color" name="Color" class="form-control" :value="product.color" />
                                                
                                            </div>


                                            <div class="form-group">
                                                <label for="Size" class="control-label">Size</label>
                                                <input id="size" name="Size" class="form-control" :value="product.size" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label for="Category" class="control-label">Category</label>
                                                <input id="category" name="Category" class="form-control" :value="product.category" />
                                               
                                            </div>
                                            <div class="form-group">
                                                @*<label asp-for="PicturePath" class="control-label"></label>
                                                <input asp-for="PicturePath" class="form-control" type="file" id="fileupload" onchange="return ShowImagePreview(this)" />
                                                <span asp-validation-for="PicturePath" class="text-danger"></span>*@
                                                <label for="PicturePath" class="control-lable">PicturePath</label>
                                                
                                                <input class="form-control" type="file" id="fileupload" name="PicturePath" v-on:change="ShowImagePreview(this)" />
                                                
                                            </div>
                                        </div>

                                        <div class="col-6">

                                            <div class="form-group">
                                                <label for="Price" class="control-label">Price</label>
                                                <input id="price" name="Price" class="form-control" :value="product.price" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label for="Discount" class="control-label">Discount</label>
                                                <input id="discount" name="Discount" class="form-control" :value="product.discount" />
                                                
                                            </div>

                                            <div class="form-group">
                                                <label for="SellingPrice" class="control-label">SellingPrice</label>
                                                <input id="sellingPrice" name="SellingPrice" class="form-control" :value="product.sellingPrice" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label for="Tag" class="control-label">Tag</label>
                                                <input id="tag" name="Tag" class="form-control" :value="product.tag" />
                                                
                                            </div>
                                            <div class="col-lg-12 col-md-3 ms-60 p-80 contact-form-style">
                                                <div class="col-lg-12 col-md-12 col-12 p-4 pe-0 contact-us-btn btn-hover">
                                                    <div>
                                                        @*<button class="submit" type="submit" id="sendMessageButton">Save Edit</button>*@
                                                        @*<button class="submit">Save Edit</button>*@
                                                        <button class="submit" v-on:click="saveProductChange()">Save Edit</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

