@section Scripts{

    <script src="https://unpkg.com/vuejs-paginate@1.9.0"></script>
    <script>
        var groupBy = function (xs, key) {
            return xs.reduce(function (rv, x) {
                (rv[x[key]] = rv[x[key]] || []).push(x);
                return rv;
            }, {});
        };


        Vue.component('paginate', VuejsPaginate);
        let app = new Vue({
            el: "#shopIndex",
            data: {
                sizeList:[],
                searchText: "",
                products: [],
                currentPage: 1,
                countPerPage: 5,
                min: 0,
                max: 0,
                selectedSize:"All",
                selectedItem: "2",
                productdetailsLink: "/Products/Productdetails/",
                getPic:
                {
                    type: "string",
                    default: "product-5.png"
                },
                priceRange: {
                    min: 0,
                    max: 100
                }
            },
            computed: {
                selectedPriceRange: function () {
                    return "$" + this.priceRange.min + " - $" + this.priceRange.max
                },
                filterProducts: function () {
                    var min = this.countPerPage * (this.currentPage - 1 <= 0 ? 0 : this.currentPage - 1);
                    var max = this.countPerPage * this.currentPage;
                    this.min = min;
                    this.max = max;
                    return this.selectedItemStyle.slice(min, max)
                },
                selectedItemStyle: function () {
                    var self = this;
                    var temp = this.products;
                    if (this.searchText.length > 0) {
                        temp = temp.filter(function(item){
                            return item.productName.includes(self.searchText);
                        })
                    }

                    //price
                    temp = temp.filter(x=> {
                        var price = x.sellingPrice == "" ? x.price : x.sellingPrice;
                        return price >= self.priceRange.min && price <= self.priceRange.max;
                    });

                    //size
                    if (self.selectedSize != "All") {
                        temp = temp.filter(x => x.size == self.selectedSize);
                    }
                   

                    return temp;
                },

            },
            mounted: function () {
                var self = this;
                fetch('/api/product/getall')
                    .then(function (response) { return response.json() })
                    .then(function (result) {
                        console.log(result);
                        self.products = result;
                    })
            },
            methods: {
                selectSize:function(text){   
                    console.log(text);
                    this.selectedSize = text;
                },
                search: function () {

                },
                clickCallback: function (page) {
                    this.currentPage = page;
                    console.log(page)
                },
                getProductdetailsLink: function (productId) {
                    return this.productdetailsLink + productId
                },
                getPicPath: function (picPath) {
                    console.log(picPath)    // receive pic filename
                    return picPath.replace("~", "")
                },
                addToCart(id) {
                    console.log("CPid:", id)
                    this.queryWishListBaseURL = 'api/product/AddToCart/' + id;
                    fetch(this.queryWishListBaseURL)
                        .then(function (response) { return response.json() })
                        .then(function (result) {
                            console.log(result);
                            //self.products = result;
                        })
                },
                addToWishlist(id) {
                    console.log("WPid:", id)
                    this.queryWishlistBaseURL = '/api/product/AddWishList/' + id;

                    fetch(this.queryWishlistBaseURL, { method: "POST" })
                        .then(function (response) { return response.json() })
                        .then(function (result) {
                            console.log(result);
                        })
                }
            },
            mounted: function () {
                var self = this;
                fetch('/api/product/getall')
                    .then(function (response) { return response.json() })
                    .then(function (result) {
                        console.log(result);
                        self.products = result;
                        self.priceRange.max = Math.max(...self.products.map(x => x.price))

                        var sliderrange = $('#slider-range');
                        sliderrange.slider({
                            range: true,
                            min: self.priceRange.min,
                            max: self.priceRange.max,
                            values: [0, 3000],
                            slide: function (event, ui) {
                                self.priceRange.min = ui.values[0];
                                self.priceRange.max = ui.values[1];
                            }
                        });

                        //size
                        var temp = groupBy(app.products,"size")
                        var count = 0;
                        for (let key of Object.keys(temp)) {
                            count+=temp[key].length;
                            self.sizeList.push({
                                "text":key,
                                "count": temp[key].length
                            })                            
                        }
                        self.sizeList.push({
                                "text":"All",
                            "count": count
                            })
                    });
                
                
            }
        });
    </script>
}