                                    <button type="submit">Register</button>
                                    </div>
                                    </form>*@

                                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <h2>Create a new account.</h2>
                                        <hr />
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                                            <label asp-for="Input.Name"></label>
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                        @*TODO  生日日期的輸入有時、分，可能太多，格式需調整*@
                                        <div class="form-floating">
                                            <input asp-for="Input.Birthday" class="form-control" autocomplete="birthday" aria-required="true" />
                                            <label asp-for="Input.Birthday"></label>
                                            <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Gender" class="form-control" autocomplete="gender" aria-required="true" />
                                            <label asp-for="Input.Gender"></label>
                                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Address" class="form-control" autocomplete="address" />
                                            <label asp-for="Input.Address"></label>
                                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.MobilePhone" class="form-control" autocomplete="mobilephone" aria-required="true" />
                                            <label asp-for="Input.MobilePhone"></label>
                                            <span asp-validation-for="Input.MobilePhone" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Membership" class="form-control" aria-required="true" readonly />
                                            <label asp-for="Input.Membership"></label>
                                            <span asp-validation-for="Input.Membership" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Input.Email"></label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.Password"></label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.ConfirmPassword"></label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



